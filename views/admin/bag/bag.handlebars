<h2>Mochila dos Player</h2>
<hr>
<a href="/admin/bag/add"><button class="btn btn-success">Nova Mochila</button></a>
{{#each bag}}
    <div class="card" style="width: 18rem;">
        <img src={{img}} class="card-img-top">
        <div class="card-body">           
           <h4>{{nome}}</h4> 
           <small>{{espaco}}</small><br>
           <a href="/admin/categorias/editar/{{_id}}"><button class="btn btn-info mt-4">Editar</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit"class="btn btn-danger mt-2">Deletar</button>
            </form>
            <a  href="/admin/bag/adicionar/{{_id}}"><button class="btn btn-info mt-4">Adicionar item</button></a>
            <a href="/admin/bag/listar/itens/{{_id}}"><button>Entrar</button></a>
        </div>
    </div>
    {{else}}
    <h4 class="mt-3">NÃ£o Mochilas registradas</h4>
{{/each}}