<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
<hr>
<div class="card-group">
    {{#each categorias}}

    <div class="card" style="background-image: url({{img}}); background-size:80%;background-repeat: no-repeat; background-position: top right; margin:5px;" >
        <div class="card-body">
            <h4 class="card-title">{{nome}}</h4>
            <small class="card-text">{{slug}}</small><br>
            <a href="/admin/categorias/editar/{{_id}}"><button class="btn btn-info mt-4">Editar</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
    {{else}}
    <h4 class="mt-3">NÃ£o a categorias registradas</h4>
    {{/each}}

</div>